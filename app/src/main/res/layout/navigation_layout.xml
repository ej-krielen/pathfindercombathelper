<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical">

    <EditText
        android:id="@+id/navigation_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:drawableEnd="@android:drawable/ic_menu_close_clear_cancel"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:hint="@string/navigation_search_hint"
        android:inputType="textCapSentences|textAutoCorrect|textFilter"
        android:padding="@dimen/small_padding"
        android:textColor="@color/white"
        android:textColorHint="@color/transparant_white" />

    <ListView
        android:id="@+id/navigation_listView"
        android:choiceMode="singleChoice"
        android:listSelector="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>